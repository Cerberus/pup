{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "modules/*": ["modules/*"],
      "proxy": ["proxy"],
    },
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": [
    "src/**/*",
    "lib.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}